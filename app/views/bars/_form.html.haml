= simple_form_for bar do |f|
  = f.label :name, 'local name'
  = f.text_field :name
  / map div
  #map{:style => "width: 550px; height: 350px;"}
  = f.association :beers, label_method: :name, value_method: :id, label: 'Beers', :input_html => {:class => "select2_special"}, as: :select
  = f.hidden_field :lat, id: 'map_lat'
  = f.hidden_field :lng, id: 'map_lng'
  = link_to "Return to Bar list", bars_path, class: 'btn btn-default'
  = f.submit 'UPDATE'

:javascript
  $(document).ready(function(){
    var local = #{bar.to_json}
    gmap_form(local);

    $(".select2_special").select2();
  });